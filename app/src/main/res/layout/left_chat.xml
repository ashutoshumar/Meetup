<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:padding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/imgMessageItemLeftProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/white"
            android:scaleType="centerCrop"
            android:id="@+id/msg_left_profile"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtShowTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgMessageItemLeftProfile"
        android:layout_marginStart="6dp"
        android:text="testing msg"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@drawable/background"/>
    <ImageView
        android:id="@+id/leftImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/imgMessageItemLeftProfile"
        android:layout_marginStart="6dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/imgMessageItemLeftProfile"
        android:layout_marginStart="5dp"/>
</RelativeLayout>