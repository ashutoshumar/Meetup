<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.InterestActivity">
 <ScrollView
     android:id="@+id/scrollview"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentStart="true"
     android:layout_alignParentTop="true">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <LinearLayout
             android:id="@+id/ll1"
             android:layout_width="match_parent"
             android:layout_height="250dp"
             android:gravity="center"
             android:orientation="vertical"
             android:background="@drawable/interest_background"
             >
             <androidx.cardview.widget.CardView
                 android:id="@+id/cardView"
                 android:layout_marginTop="10dp"
                 android:layout_width="120dp"
                 android:layout_height="120dp"
                 app:cardCornerRadius="60dp">
             <ImageView
                 android:id="@+id/imgProfile"
                 android:src="@drawable/white"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:scaleType="centerCrop"
                 android:background="@android:color/white"/>
             </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtName"
                android:text="           "
                android:layout_marginTop="18dp"
                android:textSize="20sp"
                android:textColor="#FF9E80"
                android:textStyle="bold"/>
         </LinearLayout>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/ll1"
             android:id="@+id/txt"
             android:text="@string/choose_your_favorite"
             android:layout_centerHorizontal="true"
             android:textSize="25sp"
             android:textColor="#FF8A80"
             android:layout_marginVertical="18dp"/>

         <LinearLayout
             android:id="@+id/ll2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_below="@id/txt"
             android:layout_marginHorizontal="10dp"
             android:layout_marginTop="10dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:orientation="horizontal"
                 android:weightSum="2">
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView2"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic1"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/sports"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Sports"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic1"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView3"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic2"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/entrepreneur"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Entrepreneur"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic2"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_below="@id/ll2"
             android:layout_marginHorizontal="10dp"
             android:layout_marginTop="10dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:orientation="horizontal"
                 android:weightSum="2">
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView4"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic3"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/politicalparty"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Political Party"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic3"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView5"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic4"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/politician"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Politician"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic4"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_below="@id/ll3"
             android:layout_marginHorizontal="10dp"
             android:layout_marginTop="10dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:orientation="horizontal"
                 android:weightSum="2">
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView6"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_marginVertical="3dp"
                     android:layout_height="160dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic5"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/movies"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Movie"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic5"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView7"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic6"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/singer"
