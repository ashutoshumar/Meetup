                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Singer"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic6"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll5"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_below="@id/ll4"
             android:layout_marginHorizontal="10dp"
             android:layout_marginTop="10dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:orientation="horizontal"
                 android:weightSum="2">
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView8"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic7"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/actor"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Actor"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic7"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView9"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_marginVertical="3dp"
                     android:layout_height="160dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic8"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/actress"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Actress"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic8"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll6"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_below="@id/ll5"
             android:layout_marginHorizontal="10dp"
             android:layout_marginTop="10dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:orientation="horizontal"
                 android:weightSum="2">
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView10"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic9"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/hobbies"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Hobbies"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic9"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView11"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic10"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/destination"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Fav Destination"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic10"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll7"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_below="@id/ll6"
             android:layout_marginHorizontal="10dp"
             android:layout_marginTop="10dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:orientation="horizontal"
                 android:weightSum="2">
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView12"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic11"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/career"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Career"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic11"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
                 <androidx.cardview.widget.CardView
                     android:id="@+id/cardView13"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="160dp"
                     android:layout_marginVertical="3dp"
                     android:layout_marginHorizontal="8dp"
                     app:cardCornerRadius="20dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#ffffff">
                         <ImageView
                             android:id="@+id/pic12"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/technology"
                             android:layout_centerInParent="true"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Technology"
                             android:textSize="18sp"
                             android:textColor="#FF9E80"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/pic12"/>
                     </RelativeLayout>

                 </androidx.cardview.widget.CardView>
             </LinearLayout>
         </LinearLayout>
         <Button
             android:layout_below="@id/ll7"
             android:id="@+id/btnNext"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Next"
             android:layout_marginBottom="10dp"
             android:layout_marginHorizontal="18dp"/>
     </RelativeLayout>

 </ScrollView>


</RelativeLayout>