<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OtpActivity">
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/we_have_sent_a_6_digit_otp_to"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:text="+91 8539830250"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:drawableRightCompat="@drawable/ic_edit" />

    <com.chaos.view.PinView
        android:id="@id/etOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:lineColor="#A7FFEB"
        android:inputType="number"
        app:itemCount="6"
        android:cursorVisible="true"
        app:hideLineWhenFilled="true"
        app:itemRadius="10dp"
        android:itemBackground="#ffffff"
        style="@style/PinWidget.PinView"
        app:itemHeight="40dp"
        app:itemWidth="40dp" />


    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etOtp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Didn't Receive SMS?        " />

        <TextView
            android:id="@+id/txtResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Resend"
            android:textColor="#A7FFEB"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:text="Verify" />
</RelativeLayout>